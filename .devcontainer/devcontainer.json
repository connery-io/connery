{
  "name": "Connery Dev Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node",
  "postStartCommand": "yarn install && yarn run build",
  "forwardPorts": [4201, 4202, 9229],
  "portsAttributes": {
    "4201": {
      "label": "Runner",
      "onAutoForward": "silent"
    },
    "4202": {
      "label": "Docs",
      "onAutoForward": "silent"
    },
    "9229": {
      "label": "Runner Debugger",
      "onAutoForward": "silent"
    },
    "default": {
      "label": "Application",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "git.autofetch": true,
        "git.confirmSync": false,
        "workbench.colorTheme": "Quiet Light",
        "editor.fontSize": 13,
        "terminal.integrated.fontSize": 13
      }
    }
  }
}
