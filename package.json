{
  "name": "connery",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "publish-packages": "turbo run build && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "dotenv-cli": "^7.2.1",
    "turbo": "latest"
  }
}
